{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["esnext", "dom"],   // Asegurándote de tener "dom" si interactúas con el DOM
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": false,            // O puedes poner "true" si quieres mayor rigidez
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true        // Esta opción puede ayudar a evitar errores de tipo en las librerías
  },
  "include": ["src/**/*.ts"]
}